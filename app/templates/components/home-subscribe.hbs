<div class="input-group">
  {{if cta cta 'Subscribe to the modern web revolution'}}
  <div class="input-button">
    {{input key-press="valueDidChange"
              placeholder=placeholder
              value=value
              type="email"
              name="EMAIL"
    }}
    <button type="submit" class="button">{{buttonText}}</button>
  </div>
</div>

{{#if chimpSays}}
  <div class="message">{{chimpSays}}</div>
{{/if}}
