<form {{action (perform submitTask) on="submit"}}>
{{#if submitTask.isSuccessful}}
  <div class="message">
    You're in! We'll remind you of this event when it's time.
  </div>
{{else}}
  <div class="row">
    <div class="col-md-6">
      <label for="subscribe-firstname">First Name</label>
      {{one-way-input name 
        update=(action (mut name)) 
        id="subscribe-firstname" 
        class="input-text" 
        required=true 
        name="name"
      }}
    </div>
    <div class="col-md-6">
      <label for="subscribe-lastname">Last Name</label>
      {{one-way-input lastName 
        id="subscribe-lastname" 
        class="input-text"
        required=true 
        name="lastName"
        update=(action (mut lastName))
      }}
    </div>
  </div>

  <label for="subscribe-email">Email</label>
  {{one-way-input email 
    id="subscribe-email" 
    class="input-text" 
    type="email" 
    required=true 
    name="email"
    update=(action (mut email))
    focusIn=(action (mut showEmailError) false)
    focusOut=(action (mut showEmailError) true)
  }}

  {{#if showEmailError}}
    {{#if (v-get this "email" "isInvalid")}}
      <div class="message">Please provide a valid email address.</div>
    {{/if}}
  {{/if}}

  <button type="submit" class="button action-button">Register</button>

{{/if}}
</form>